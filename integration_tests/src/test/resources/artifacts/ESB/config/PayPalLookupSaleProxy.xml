<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="paypalSalesLookup"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
   <target>
      <inSequence>
         <property xmlns:ns="wso2.connector.paypal.saleslookup"
                   name="salesid"
                   expression="//ns:id/text()"/>
         <property xmlns:ns="wso2.connector.paypal.saleslookup"
                   name="ppurl"
                   expression="//ns:paypalApiUrl/text()"/>
         <property xmlns:ns="wso2.connector.paypal.saleslookup"
                   name="auth"
                   expression="//ns:authorization/text()"/>
         <log/>
         <PayPal.init>
            <appUri>{$ctx:ppurl}</appUri>
         </PayPal.init>
         <PayPal.lookupSale>
            <authorization>{$ctx:auth}</authorization>
            <id>{$ctx:salesid}</id>
         </PayPal.lookupSale>
         <respond/>
      </inSequence>
      <outSequence>
         <log/>
         <send/>
      </outSequence>
   </target>
   <description/>
</proxy>
                                