<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="googledrive_watchFile"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
   <target>
      <inSequence>
         <log/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="fieldID"
                   expression="//ns:fileId/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="channelId"
                   expression="//ns:channelId/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="channelAddress"
                   expression="//ns:channelAddress/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="channelType"
                   expression="//ns:channelType/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="useServiceAccount"
                   expression="//ns:useServiceAccount/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="serviceAccountEmail"
                   expression="//ns:serviceAccountEmail/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="serviceAccountPKCSContent"
                   expression="//ns:serviceAccountPKCSContent/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="clientId"
                   expression="//ns:clientId/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="clientSecret"
                   expression="//ns:clientSecret/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="accessToken"
                   expression="//ns:accessToken/text()"/>
         <property xmlns:ns="urn:wso2.connector.googledrive.watchfile"
                   name="refreshToken"
                   expression="//ns:refreshToken/text()"/>
         <property name="messageType" value="text/xml" scope="axis2"/>
	 <googledrive.init>
            <useServiceAccount>{$ctx:useServiceAccount}</useServiceAccount>
            <serviceAccountEmail>{$ctx:serviceAccountEmail}</serviceAccountEmail>
            <serviceAccountPKCSContent>{$ctx:serviceAccountPKCSContent}</serviceAccountPKCSContent>
            <clientId>{$ctx:clientId}</clientId>
            <clientSecret>{$ctx:clientSecret}</clientSecret>
            <refreshToken>{$ctx:refreshToken}</refreshToken>
            <accessToken>{$ctx:accessToken}</accessToken>
         </googledrive.init>
         <googledrive.watchFile>
            <fileId>{$ctx:fieldID}</fileId>
            <channelId>{$ctx:channelId}</channelId>
            <channelAddress>{$ctx:channelAddress}</channelAddress>
            <channelType>{$ctx:channelType}</channelType>
         </googledrive.watchFile>
         <respond/>
      </inSequence>
      <outSequence>
         <log/>
         <send/>
      </outSequence>
   </target>
   <description/>
</proxy>
                                
