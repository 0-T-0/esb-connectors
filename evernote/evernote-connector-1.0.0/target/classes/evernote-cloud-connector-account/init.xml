<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="devToken"/>
    <parameter name="noteStoreUrl"/>
    <parameter name="devTokenType"/>
    <sequence>
        <property expression="$func:devToken" name="evernote.devToken"
            scope="operation" type="STRING"/>
        <property expression="$func:noteStoreUrl" name="evernote.noteStoreUrl"
                  scope="operation" type="STRING"/>
        <property expression="$func:devTokenType" name="evernote.devTokenType"
                  scope="operation" type="STRING"/>
    </sequence>
</template>