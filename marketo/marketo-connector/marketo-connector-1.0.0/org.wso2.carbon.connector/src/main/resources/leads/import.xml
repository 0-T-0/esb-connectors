<template name="import" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Required parameters -->
    <parameter name="format" description="File format."/>
    <parameter name="marketoInstanceURL" description="File format."/>
    <!-- Optional parameters -->
    <parameter name="access_token" description="List id"/>
    <!--<parameter name="lookupField" description="Attribute to find the duplicate."/>-->
    <!--<parameter name="partitionName" description="Lead partition name."/>-->
    <sequence>
        <property name="uri.var.format" expression="$func:format"/>
        <property name="uri.var.marketoInstanceURL" expression="$func:marketoInstanceURL"/>
        <property name="uri.var.access_token" expression="$func:access_token"/>
        <!--<property name="uri.var.partitionName" expression="$func:partitionName"/>-->
        <!--<property name="uri.var.file" expression="$func:file"/>-->
        <!--<property name="messageType" scope="transport" action="remove"/>-->
        <call>
            <endpoint>
                <http method="post"
                      uri-template="{uri.var.marketoInstanceURL}/bulk/v1/leads.json?format={uri.var.format}&amp;access_token={uri.var.access_token}"/>
            </endpoint>
        </call>
    </sequence>
</template>