<?xml version="1.0" encoding="UTF-8"?>
<proxy xmlns="http://ws.apache.org/ns/synapse"
       name="linkedinFollowCompanyPage"
       transports="https,http"
       statistics="disable"
       trace="disable"
       startOnLoad="true">
   <target>
      <inSequence>
         <property xmlns:ns="wso2.connector.linkedin.followcompanypage"
                   name="id"
                   expression="//ns:id/text()"/>
         <property xmlns:ns="wso2.connector.linkedin.followcompanypage"
                   name="accessToken"
                   expression="//ns:accessToken/text()"/>
         <property xmlns:ns="wso2.connector.linkedin.followcompanypage"
                   name="appUri"
                   expression="//ns:appUri/text()"/>
         <linkedin.init>
            <appUri>{$ctx:appUri}</appUri>
            <accessToken>{$ctx:accessToken}</accessToken>
         </linkedin.init>
         <linkedin.followCompanyPage>
            <id>{$ctx:id}</id>
         </linkedin.followCompanyPage>
         <respond/>
      </inSequence>
      <outSequence>
         <log/>
         <send/>
      </outSequence>
   </target>
   <description/>
</proxy>
