<template name="Login" xmlns="http://ws.apache.org/ns/synapse">

  <parameter name="user_name" description="Name of the user"/>
  <parameter name="password" description="The md5 hashed password of teh user"/>
  <parameter name="version" description="Version number"/>
  <parameter name="application_name" description="Application Name"/>

  <sequence>
    <property name="uri.var.user_name" expression="$func:user_name"/>
    <property name="uri.var.password" expression="$func:password"/>
    <property name="uri.var.version" expression="$func:version"/>
    <property name="uri.var.application_name" expression="$func:application_name"/>
    
    <payloadFactory>
	
	  <format>
   		 <sug:login xmlns:sug="http://www.sugarcrm.com/sugarcrm">
	         <sug:user_auth>
	            <user_name>$1</user_name>
	            <password>$2</password>
	            <version>$3</version>
	         </sug:user_auth>
	         <application_name>$4</application_name>
	      </sug:login>
	  </format>
	  
	  <args>
          <arg expression="get-property('uri.var.user_name')"/>
          <arg expression="get-property('uri.var.password')"/>
          <arg expression="get-property('uri.var.version')"/>
          <arg expression="get-property('uri.var.application_name')"/>
      </args>
      
    </payloadFactory>
    
    <header name="To" expression="get-property('uri.var.sugarCRMurl')"/>
    
    <call>
		<endpoint>
			<default format="soap11"/>
		</endpoint>
	</call>
	
  </sequence>
  
</template>