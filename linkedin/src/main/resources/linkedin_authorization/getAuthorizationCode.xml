<template name="getAuthorizationCode" xmlns="http://ws.apache.org/ns/synapse">
  <parameter name="accessToken" description="Parameter Description 0"/>
  <parameter name="responseType" description="Parameter Description 1"/>
  <parameter name="clientId" description="Parameter Description 2"/>
  <parameter name="scope" description="Parameter Description 3"/>
  <parameter name="state" description="Parameter Description 4"/>
  <parameter name="redirectUri" description="Parameter Description 5"/>
  <sequence class="sequence">
    <property class="property" name="accessToken" expression="$func:accessToken"/>
    <property class="property" name="responseType" expression="$func:responseType"/>
    <property class="property" name="clientId" expression="$func:clientId"/>
    <property class="property" name="scope" expression="$func:scope"/>
    <property class="property" name="state" expression="$func:state"/>
    <property class="property" name="redirectUri" expression="$func:redirectUri"/>
    <payloadFactory media-type="xml">
      <format>
        <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
          <soapenv:Header></soapenv:Header>
          <soapenv:Body></soapenv:Body>
        </soapenv:Envelope>
      </format>
    </payloadFactory>
    <call>
      <endpoint>
        <http method="get" uri-template="{uri.wso2.connector.url}/rest/api/{uri.var.id}"/>
      </endpoint>
    </call>
  </sequence>
</template>