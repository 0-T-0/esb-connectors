<template name="getThread" xmlns="http://ws.apache.org/ns/synapse">
	<parameter name="threadId" description="The uniq identifier of the thread" />
    <parameter name="connection" description="The connection which belongs to an object"/>
    <parameter name="fields" description="The fields which belongs to an object"/>
    <sequence>
		<property name="uri.var.threadId" expression="$func:threadId" />
        <property name="uri.var.connection" expression="$func:connection"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <call>
			<endpoint>
				<http method="get"
					uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/{uri.var.threadId}/{+uri.var.connection}?access_token={uri.var.accessToken}&amp;fields={+uri.var.fields}" />
			</endpoint>
		</call>
		<!-- Remove response custom header information -->
		<header name="X-FB-Debug" scope="transport" action="remove" />
		<header name="X-FB-Rev" scope="transport" action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />
	</sequence>
</template>