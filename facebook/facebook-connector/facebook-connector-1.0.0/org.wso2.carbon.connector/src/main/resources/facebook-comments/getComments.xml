<template name="getComments" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="objectId" description="Id of the resource"/>
    <parameter name="fields" description="The fields which belongs to an object"/>
    <sequence>
        <property name="uri.var.objectId" expression="$func:objectId"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <script language="js">
            <![CDATA[
            var params = mc.getPayloadJSON().summary;
            if (params != null && params.toString().toLowerCase() === "true")
            {
                params = "true";
            }
            else
            {
                params = "false";
            }
            mc.setProperty('uri.var.summary', params);
           ]]>
        </script>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/{uri.var.objectId}/comments?access_token={uri.var.accessToken}&amp;summary={uri.var.summary}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="X-FB-Debug" scope="transport" action="remove"/>
        <header name="X-FB-Rev" scope="transport" action="remove"/>
        <header name="WWW-Authenticate" scope="transport" action="remove"/>
    </sequence>
</template>