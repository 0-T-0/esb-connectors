<template name="getMutualFriends" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="userId" description="The user Id of user"/>
    <sequence>
        <property name="uri.var.userId" expression="$func:userId"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/{uri.var.userId}/mutualfriends/?fields=context.fields(mutual_friends)&amp;access_token={uri.var.accessToken}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="X-FB-Debug" scope="transport" action="remove"/>
        <header name="X-FB-Rev" scope="transport" action="remove"/>
        <header name="WWW-Authenticate" scope="transport" action="remove"/>
    </sequence>
</template>