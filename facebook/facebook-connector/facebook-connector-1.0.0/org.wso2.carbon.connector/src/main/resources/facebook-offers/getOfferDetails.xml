<template name="getOfferDetails" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="offerId" description="The offer Id"/>
    <parameter name="fields" description="The fields which belongs to an object"/>
    <sequence>
        <property name="uri.var.offerId" expression="$func:offerId"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/{uri.var.apiVersion}/{uri.var.offerId}?access_token={uri.var.accessToken}&amp;fields={+uri.var.fields}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="X-FB-Debug" scope="transport" action="remove"/>
        <header name="X-FB-Rev" scope="transport" action="remove"/>
        <header name="WWW-Authenticate" scope="transport" action="remove"/>
    </sequence>
</template>